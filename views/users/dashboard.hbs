<div class='container-fluid'>
  <div class='row'>
    <div class='col-lg-3 col-md-4 col-sm-6 col-xm-12 my-3'>
      {{>_userDashboard}}
    </div>
    <div class="col-lg-9 col-md-8 col-sm-6 col-xm-12 my-3">
        <h4 class="text-center my-2">Your Dashboard</h4>
      <table class="table table-striped table-hover text-center">
        <thead>
            <tr>
                <th scope="col"> <strong>Title</strong></th>
                <th scope="col"><strong>Status</strong></th>
                <th scope="col"><strong>Date</strong></th>
                <th scope="col"><strong>Edit</strong></th>
                <th scope="col"><strong>Delete</strong></th>
            </tr>
        </thead>
       
            {{#each blog}}
             <tbody>
                <td><a href="/blogs/{{_id}}">{{title}}</a></td>
                <td>{{status}}</td>
                <td>{{formatDate createdAt "dd/MM/yy"}}</td>
                <td><a href="/blogs/{{_id}}/edit"><i class="fas fa-pen"></i></a></td>
                <form action="/blogs/{{_id}}?_method=DELETE" method="POST">
                    <td><button class="btn"><i class="fas fa-trash-alt"></i></button></td>
                </form>
              </tbody>
            {{/each}}
     
      </table>  
  </div>
  </div>
</div>