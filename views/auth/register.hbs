<div class='row'>
  <div class='col-lg-6 col-md-10 col-sm-12 offset-lg-2 offset-md-1'>
    <h1 class='text-muted pb-4 mt-2 text-center'>Register</h1>
    <form action='/auth/register' method='POST'>
      <div class='row'>
        <div class='form-group col'>
          <label for='firstName'>firstName</label>
          <input
            type='text'
            name='firstName'
            id='firstName'
            class='form-control'
            {{#if userReg.firstName}} value={{userReg.firstName}}{{/if}}
          />
        </div>
        <div class='form-group col'>
          <label for='lastName'>lastName</label>
          <input
            type='text'
            name='lastName'
            id='lastName'
            class='form-control'
            {{#if userReg.lastName}} value={{userReg.lastName}}{{/if}}
          />
        </div>
      </div>
      <div class='form-group'>
        <label for='email'>Email</label>
        <input type="text" name="email" id="email" class="form-control" {{#if userReg.email}} value="{{userReg.email}}" {{/if}}>
      </div>
      <div class='form-group'>
        <label for='password'>Password</label>
        <input
          type='password'
          name='password'
          id='password'
          class='form-control'
          {{#if userReg.password}} value={{userReg.password}}{{/if}}
        />
      </div>
      <div class='form-group'>
        <label for='confirmPassword'>Confirm Password</label>
        <input
          type='password'
          name='confirmPassword'
          id='confirmPassword'
          class='form-control'
          {{#if userReg.confirmPassword}} value={{userReg.confirmPassword}}{{/if}}
        />
      </div>
      <div class="d-flex justify-content-center">
        <button class='btn btn-primary mt-2'><i class="fas fa-registered mr-2"></i>Register</button>
      </div>
    </form>
  </div>

</div>