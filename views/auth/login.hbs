<div class='row'>
  <div class='col-lg-6 col-md-10 col-sm-12 offset-lg-2 offset-md-1'>
    <h1 class='text-muted pb-4 mt-2 text-center'>Login</h1>
    <form action='/auth/login' method='POST'>
      <div class='form-group'>
        <label for='email'>Email</label>
        <input type='text' name='email' id='email' class='form-control' {{#if userLog.email}} value={{userLog.email}} {{/if}} />
      </div>
      <div class='form-group'>
        <label for='password'>Password</label>
        <input
          type='password'
          name='password'
          id='password'
          class='form-control'
        />
      </div>
      <div class="d-flex justify-content-center">
        <button class='btn btn-primary mr-3 mt-2'><i class="fas fa-sign-in-alt mr-2"></i> Login</button>
        <a href="/auth/google" class="btn btn-success mt-2"><i class="fab fa-google "></i> Login with Google</a>
      </div>
      
    </form>
  </div>
</div>