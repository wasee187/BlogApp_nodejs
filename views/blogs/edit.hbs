<div class="container p-4">
    <form action="/blogs/{{blog._id}}?_method=PUT" method="POST">
    <div class="form-group">
        <label for="title">Blog Title :</label>
        <input type="text" class="form-control" id="title" name="title" value="{{blog.title}}">
    </div>
     <div class="form-group">
        <label for="description">Blog Description : </label>
        <textarea class="form-control" id="description" rows="5" name="description">{{blog.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="Status">Status : </label>
        <select id="status" name="status">
            <option value="public" {{compareValues "public" blog.status 'select'}}>Public</option>
            <option value="private" {{compareValues "private" blog.status 'select'}}>Private</option>
        </select>
    </div>
      <div class="form-group">
        <label for="tags">Tags : </label>
        <input type="tags" class="form-control" id="tags" name="tags" data-role='tagsinput' value="{{blog.tags}}">
    </div>
     <div class="form-check pb-2">
          <input class="form-check-input" id="allowComments" type="checkbox" name="allowComments" {{#if blog.allowComments}} checked='true' {{/if}}>
        <label for="allowComments" class="form-check-label">Allow Comments</label>
    </div>
    <button disabled type="submit" style="display: none;">Update Blog</button>
    <button type="submit" class="btn btn-primary">Update Blog</button>
</form>   
</div>
